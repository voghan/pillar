<?xml version="1.0" encoding="UTF-8"?>
<workspaceFilter version="1.0">
    <filter root="/conf/pillar/.content.xml"/>
    <filter root="/conf/pillar/sling:configs" mode="merge"/>
    <filter root="/conf/pillar/notifications"/>
    <filter root="/conf/pillar/scripts"/>
    <filter root="/conf/pillar/settings/.content.xml"/>
    <filter root="/conf/pillar/settings/cloudconfigs" mode="merge"/>
    <filter root="/conf/pillar/settings/dam"/>
    <filter root="/conf/pillar/settings/wcm"/>
    <filter root="/conf/global/settings/workflow/models/request-publish-approval/"/>
    <filter root="/var/workflow/models/request-publish-approval"/>
    <filter root="/content/pillar" mode="merge"/>
    <filter root="/content/dam/pillar" mode="merge">
        <exclude pattern="/content/dam/pillar(/.*)?"/>
        <include pattern="/content/dam/pillar/jcr:content(/.*)?"/>
        <include pattern="/content/dam/pillar/cfm"/>
        <include pattern="/content/dam/pillar/cfm/jcr:content(/.*)?"/>
        <include pattern="/content/dam/pillar/cfm/basic-cards(/.*)?"/>
        <include pattern="/content/dam/pillar/cfm/hero-cards(/.*)?"/>
        <include pattern="/content/dam/pillar/cfm/links(/.*)?"/>
        <include pattern="/content/dam/pillar/cfm/simple-cards(/.*)?"/>
    </filter>
    <filter root="/content/experience-fragments/pillar" mode="merge"/>
</workspaceFilter>
